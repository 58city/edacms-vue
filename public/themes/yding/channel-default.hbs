                    <dt class="{{#compare @number '<' 4}}top-3{{/compare}}">{{@number}}</dt>
                    <dd>
                        <h3><a href="{{href}}">{{title}}</a><i></i><span>{{reading.total}}次</span></h3>
                        <p>{{extensions.desc}}</p>
                    </dd>
                </dl>
                {{else}}
                <div class="no-content"></div>
                {{/foreach}}
            </div>
        </div>
        <div class="channel-rank">
            <div class="title">
                <h2>周排行<span>TOP10</span></h2>
            </div>
            <div class="top-list-item">
                {{#foreach readingList.week limit="10"}}
                <dl>
                    <dt class="{{#compare @number '<' 4}}top-3{{/compare}}">{{@number}}</dt>
                    <dd>
                        <h3><a href="{{href}}">{{title}}</a><i></i><span>{{reading.total}}次</span></h3>
                        <p>{{extensions.desc}}</p>
                    </dd>
                </dl>
                {{else}}
                <div class="no-content"></div>
                {{/foreach}}
            </div>
        </div>
        <div class="channel-rank">
            <div class="title">
                <h2>日排行<span>TOP10</span></h2>
            </div>
            <div class="top-list-item">
                {{#foreach readingList.day limit="10"}}
                <dl>
                    <dt class="{{#compare @number '<' 4}}top-3{{/compare}}">{{@number}}</dt>
                    <dd>
                        <h3><a href="{{href}}">{{title}}</a><i></i><span>{{reading.total}}次</span></h3>
                        <p>{{extensions.desc}}</p>
                    </dd>
                </dl>
                {{else}}
                <div class="no-content"></div>
                {{/foreach}}
            </div>
        </div>
    </div>
</div>